<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:cardCornerRadius="12dp"
    android:layout_margin="8dp"
                                        android:id="@+id/main_sub_category_card">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/main_sub_category_title" android:text="Какая-то хуетень"
        android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp" android:layout_marginBottom="4dp"/>

    </android.support.v7.widget.CardView>

</LinearLayout>