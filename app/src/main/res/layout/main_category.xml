<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView android:layout_width="64dp" android:layout_height="64dp"
    android:id="@+id/main_category_image" android:layout_margin="8dp"/>

    <TextView android:layout_width="80dp" android:layout_height="wrap_content"
              android:id="@+id/main_category_title" android:textAlignment="center"
              android:textSize="10sp" tools:ignore="SmallSp"/>

</LinearLayout>