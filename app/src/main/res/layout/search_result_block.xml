<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:paddingTop="8dp">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:cardElevation="4dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:padding="8dp">

            <ImageView android:layout_width="48dp" android:layout_height="48dp"
            android:id="@+id/search_result_image"/>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
            android:textColor="@android:color/black" android:textSize="18sp"
            android:layout_marginTop="2dp" android:padding="8dp"
            android:id="@+id/search_result_title"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>