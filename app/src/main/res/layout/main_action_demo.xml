<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/main_action_layout">

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="16dp" app:cardCornerRadius="4dp"
    android:id="@+id/main_action_demo_card_image">

        <ImageView android:layout_width="match_parent" android:layout_height="200dp"
                   android:adjustViewBounds="true" android:scaleType="centerCrop"
        android:id="@+id/main_action_demo_image"
        android:src="@drawable/image_preview"/>

    </android.support.v7.widget.CardView>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:translationZ="2dp" android:id="@+id/main_action_demo_data_layout">

        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="30dp" android:background="@android:color/white">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="44dp"
                          android:orientation="vertical" android:paddingTop="6dp"
                          android:paddingStart="4dp" android:paddingEnd="4dp"
                          android:gravity="center">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/main_action_demo_old_cost" android:text="5000р"
                android:textColor="@android:color/black"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/main_action_demo_new_cost" android:text="5000р"
                          android:textColor="@android:color/black"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                                            android:layout_marginEnd="30dp" android:layout_marginTop="200dp">

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/main_action_demo_profit" android:textColor="@android:color/white"
                      android:text="-10%" android:padding="4dp" android:textStyle="bold"
                      android:background="@drawable/profit_background" android:textSize="18sp"/>

        </android.support.v7.widget.CardView>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/main_action_demo_title" android:paddingTop="8dp"
                  android:text="Супер крутой фотик" android:layout_marginTop="210dp"
                  android:paddingStart="16dp" android:paddingEnd="92dp"
        android:layout_marginBottom="8dp"/>

    </RelativeLayout>

</RelativeLayout>