<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.search.SearchFragment"
android:orientation="vertical" android:background="#f8faf9">

    <android.support.v7.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:background="@android:color/white" android:elevation="1dp"
                    android:translationZ="1dp">

        <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:src="@drawable/ic_chevron_left_24dp" style="@style/Widget.AppCompat.ActionButton.CloseMode"
                     android:id="@+id/search_back_button" android:contentDescription="@string/content_description_button_back"/>

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
        android:hint="@string/main_search_hint" android:inputType="text"
        android:layout_marginStart="56dp" android:layout_marginEnd="16dp"
        android:id="@+id/search_input" android:layout_marginTop="2dp"/>

    </android.support.v7.widget.CardView>

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:id="@+id/search_result_layout"/>

    </ScrollView>

</LinearLayout>